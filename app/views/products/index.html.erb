<div class="container">
  <div class="row">
    <div class="col-12">
      For instructions on how this app work, please read first the README.md following
      <a href="https://github.com/hernamvel/searcher">this link</a>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      &nbsp;
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table id="data-table" class="table table-striped table-bordered" style="width: 1000px;">
        <thead>
        <th>title</th>
        <th>description</th>
        <th>country</th>
        <th>price</th>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#data-table').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": "products/search.json",
            "columns": [
                {"data": "title"},
                {"data": "description"},
                {"data": "country"},
                {"data": "price"}
            ]
        });
    });
</script>